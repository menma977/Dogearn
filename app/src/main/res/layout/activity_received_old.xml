<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.menuOld.ReceivedOldActivity"
    android:background="@color/colorAccent"
    android:gravity="center">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:background="@drawable/card_default"
      android:layout_margin="20dp"
      android:padding="10dp"
      android:elevation="25dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:srcCompat="@drawable/logo_ii_squard_typo"
        android:id="@+id/imageViewQR"
        android:contentDescription="@string/logo"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <TextView
        android:hint="@string/wallet"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/textViewWallet"
        android:gravity="center_vertical"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp"
        app:drawableEndCompat="@drawable/ic_baseline_file_copy"
        app:drawableTint="@color/colorPrimary"/>

  </LinearLayout>

</LinearLayout>