<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.NavigationOldActivity"
    android:background="@color/White">

  <FrameLayout
      android:id="@+id/contentFragment"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintBottom_toTopOf="@id/nav_view"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0"
      android:layout_marginBottom="20dp"/>

  <LinearLayout
      android:background="@drawable/card_default"
      android:id="@+id/nav_view"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_margin="20dp"
      android:padding="5dp"
      android:baselineAligned="false"
      android:elevation="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

      <ImageButton
          android:id="@+id/buttonHome"
          android:layout_width="50dp"
          android:layout_height="50dp"
          app:srcCompat="@drawable/home"
          android:scaleType="fitCenter"
          android:background="@color/Link"
          android:contentDescription="@string/icon"/>

      <TextView
          android:text="@string/home"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textAlignment="center"
          android:textSize="14sp"
          android:textColor="@color/colorPrimary"
          android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

      <ImageButton
          android:id="@+id/buttonDogeChain"
          android:layout_width="50dp"
          android:layout_height="50dp"
          app:srcCompat="@drawable/dogechain"
          android:scaleType="fitCenter"
          android:background="@color/Link"
          android:contentDescription="@string/icon"/>

      <TextView
          android:text="@string/dogechain"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textAlignment="center"
          android:textSize="14sp"
          android:textColor="@color/colorPrimary"
          android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

      <ImageButton
          android:id="@+id/buttonInfo"
          android:layout_width="50dp"
          android:layout_height="50dp"
          app:srcCompat="@drawable/info_user"
          android:scaleType="fitCenter"
          android:background="@color/Link"
          android:contentDescription="@string/icon"/>

      <TextView
          android:text="@string/info"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textAlignment="center"
          android:textSize="14sp"
          android:textColor="@color/colorPrimary"
          android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

      <ImageButton
          android:id="@+id/buttonSetting"
          android:layout_width="50dp"
          android:layout_height="50dp"
          app:srcCompat="@drawable/setting"
          android:scaleType="fitCenter"
          android:background="@color/Link"
          android:contentDescription="@string/icon"/>

      <TextView
          android:text="@string/setting"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textAlignment="center"
          android:textSize="16sp"
          android:textColor="@color/colorPrimary"
          android:textStyle="bold"/>

    </LinearLayout>

  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>