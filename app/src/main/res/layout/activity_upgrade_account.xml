<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.menu.UpgradeAccountActivity"
    android:background="@drawable/background"
    android:orientation="vertical">

  <Space
      android:layout_width="match_parent"
      android:layout_height="20dp"/>

  <LinearLayout
      android:id="@+id/linearLayoutSyncData"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/card_default_2"
      android:orientation="vertical"
      android:layout_marginStart="15dp"
      android:layout_marginEnd="15dp"
      android:padding="10dp"
      android:elevation="20dp"
      android:gravity="center">

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:contentDescription="@string/logo"
        app:srcCompat="@drawable/logo_doge_pop"/>

    <TextView
        android:id="@+id/textViewBalance"
        android:text="@string/example_doge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textSecondary"
        android:textSize="18sp"
        android:gravity="center"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

      <TextView
          android:id="@+id/textViewTotalPin"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="10sp"
          android:gravity="center_vertical"
          android:textColor="@color/colorPrimaryAdd2"
          android:drawablePadding="1dp"
          tools:ignore="SmallSp"
          app:drawableStartCompat="@drawable/ic_baseline_fiber_pin"
          app:drawableTint="@color/colorPrimaryAdd2"
          android:elevation="20dp"/>

      <TextView
          android:id="@+id/textViewGrade"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="10sp"
          android:gravity="center_vertical"
          android:textColor="@color/colorPrimaryAdd2"
          android:drawablePadding="1dp"
          tools:ignore="SmallSp"
          app:drawableStartCompat="@drawable/ic_baseline_emoji_events"
          app:drawableTint="@color/colorPrimaryAdd2"
          android:elevation="20dp"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp"/>

  </LinearLayout>

  <Space
      android:layout_width="match_parent"
      android:layout_height="5dp"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:background="@drawable/card_default_3"
      android:padding="10dp"
      android:layout_margin="10dp"
      android:elevation="20dp">

    <TextView
        android:id="@+id/textViewUpgradeTo"
        android:text="@string/upgrade_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/textViewGradePrice"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center"
          android:textColor="@color/colorPrimary"/>

      <TextView
          android:id="@+id/textViewRequestPin"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center"
          android:textColor="@color/colorPrimary"/>

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/editTextSecondaryPassword"
        android:background="@drawable/edit_text_mode"
        android:drawableStart="@drawable/ic_baseline_lock_open"
        android:drawableTint="@color/White"
        android:textColor="@color/colorPrimary"
        android:autofillHints="@string/doge_format"
        android:drawablePadding="10dp"
        tools:ignore="LabelFor"
        android:hint="@string/transaction_password"
        android:textColorHint="@color/Dark"
        android:maxLength="4"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <Button
        android:text="@string/buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBuy"
        android:background="@drawable/button_success"
        android:textColor="@color/textSecondary"/>

  </LinearLayout>

</LinearLayout>